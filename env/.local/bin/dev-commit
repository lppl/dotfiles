#!/usr/bin/env bash

source "$(dirname ${BASH_SOURCE[0]})/.dev-api"

main() {
  echo $DEV_ENV_DIR
  pushd $DEV_ENV_DIR > /dev/null

  commit-dir scripts
  commit-dir env/.config/fish
  commit-dir env/.config/nvim
  commit-dir env/.config/tmux
  commit-dir env/.config
  commit-dir env/.local/bin
  commit-dir env/.local
  commit-dir env
  commit-dir 

  git push

  popd > /dev/null
}

commit-dir () {
  local path=$1
  local dir=$(cd $DEV_ENV_DIR/$path && pwd)
  local name=$(basename $dir)

  pushd $dir > /dev/null

  log "dev-update $name at $dir"
  git add .
  git commit . -m "dev-update: $name"

  popd > /dev/null
}

commit-file () {
  local path=$1
  local file=$(cd $DEV_ENV_DIR/$path && pwd)
  local name=$(basename $file)

  log "dev-update $name at $dir"
  git add $file
  git commit $file -m "dev-update: $path"
}



main

#!/usr/bin/env bash


source "$(dirname ${BASH_SOURCE[0]})/.dev-api"


main () {
  user_name=`git config --global user.name`
  user_email=`git config --global user.email`

  update_dirs $DEV_ENV_DIR/env/.config $HOME/.config
  update_files $DEV_ENV_DIR/env/.config $HOME/.config
  update_dirs $DEV_ENV_DIR/env/.local/share $HOME/.local/share
  update_files $DEV_ENV_DIR/env/.local/bin $HOME/.local/bin
  update_files $DEV_ENV_DIR/env $HOME

  git config --global user.name "$user_name"
  git config --global user.email "$user_email"
}


update_dirs() {
    log "=============================================="
    log "update_dirs at $2"
    log "\`rm -rf and cp -r\` for directories:"
    pushd $1 &> /dev/null
    (
        configs=`find . -mindepth 1 -maxdepth 1 -type d`
        for c in $configs; do
            directory=${2%/}/${c#./}
            log "  - $directory"

            if is_hot; then
                rm -rf $directory
                cp -r ./$c $2
            fi
        done
    )
    popd &> /dev/null
    log "=============================================="
    log ""
}

update_files() {
    log "=============================================="
    log "update_files at $2"
    log "\`cp --update\` for files:"
    pushd $1 &> /dev/null
    (
        configs=`find . -mindepth 1 -maxdepth 1 -type f`
	mkdir -p $2
        for c in $configs; do
            target_file=${2%/}/${c#./}
            log "  - $target_file"
            if is_hot; then
                cp --update ./$c $2
            fi
        done
    )
    popd &> /dev/null
    log "=============================================="
    log ""
    log ""
}

copy() {
    log "removing: $2"
    if is_hot; then
        rm $2
    fi
    log "copying: $1 to $2"
    if is_hot; then
        cp $1 $2
    fi
}

link() {
    source=$1
    target=$2
    log "=============================================="
    log "[link]: $source as $target"
    log ""
    if is_hot; then
        rm -r `realpath "$target"`
        echo `realpath "$source"` `realpath "$target"`
        # ln -s `realpath "$source"` `realpath "$target"`
    fi
    popd &> /dev/null
    log "=============================================="
    log ""
    log ""
}

main
